" Options
set number
set relativenumber
set tabstop=4
set shiftwidth=4
set breakindent
set undofile
set ignorecase
set smartcase
set noswapfile
set termguicolors
set nowrap
set wrapscan
set scrolloff=11
set conceallevel=0
set completeopt=menuone,noselect
set clipboard=unnamedplus

" Buffer-local
set expandtab

" Theme
set termguicolors
colorscheme slate

highlight Normal ctermbg=NONE guibg=NONE
highlight NonText ctermbg=NONE guibg=NONE
highlight SignColumn ctermbg=NONE guibg=NONE
highlight LineNr ctermbg=NONE guibg=NONE
highlight EndOfBuffer ctermbg=NONE guibg=NONE
